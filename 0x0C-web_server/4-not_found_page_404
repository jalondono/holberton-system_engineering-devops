# Configure your Nginx server to have a custom 404 page that contains the string Ceci n'est pas une page                                                                                                        
apt-get update
apt-get -y install nginx
echo 'Holberton School' > /var/www/html/index.nginx-debian.html
sed -i '/listen 80 default_server;/a rewrite ^/redirect_me https://findtheinvisiblecow.com permanent;' /\
etc/nginx/sites-available/default
echo "Ceci n'est pas une page" > /var/www/html/custom_404.html
sed -i '/server_name _;/a error_page 404 /custom_404.html;\nlocation = /custom_404.html {\nroot /var/www\
/html;\ninternal;\n}' /etc/nginx/sites-available/default
service nginx start
